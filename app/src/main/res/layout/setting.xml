<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#000000"
        android:text="Ошибся в написании своего имени? не расстраивайся, ты можешь все исправить!"
        android:id="@+id/textView54"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView54"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout12">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:text="Изменить имя:"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/textView93"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="на"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText48"
            android:textColor="#000000"/>
    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button28"
        android:layout_gravity="right"
        android:onClick="onClickFrag"
        android:layout_below="@+id/textView54"
        android:layout_toRightOf="@+id/editText49"
        android:layout_toEndOf="@+id/editText49" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:textColor="#000000"
        android:text="Хочешь чтобы родители знали о твоих успехаха? Введи их электронную почту и они будут знать какой ты молодец!"
        android:id="@+id/textView94"
        android:layout_below="@+id/button28"
        android:layout_toRightOf="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText49"
        android:textColor="#000000"
        android:layout_below="@+id/textView94"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button30"
        android:layout_toStartOf="@+id/button30" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button30"
        android:layout_gravity="right"
        android:onClick="onClickFrag"
        android:layout_alignTop="@+id/editText49"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хочешь загрузить свою фотографию?Тогда нажми сначала на кноку Загрузить, и если тебе все понравиться нажми Установить."
        android:textSize="12dp"
        android:textColor="#000000"
        android:id="@+id/textView12"
        android:layout_below="@+id/button30"
        android:layout_toRightOf="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button31"
        android:layout_gravity="right"
        android:layout_below="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button34"
        android:layout_gravity="right"
        android:onClick="onClickFrag"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button31"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="500dp"
        android:id="@+id/imageView15"
        android:layout_below="@+id/button34"
        android:layout_alignRight="@+id/button34"
        android:layout_alignEnd="@+id/button34"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false" />

</RelativeLayout>