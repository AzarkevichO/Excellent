<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Выправі памылкі, дзе трэба. Палічы словы з падоўжанымі зычнымі, каб пазнаць, дзе ж на самай справе чакае вас Гена."
        android:id="@+id/textView77"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText44"
        android:text="Збожа, зацішша, полле, у лессе, жыццё, забыцё, узвыша, двукосе, адкрыцё, суддзя, карэнъе,дзесяццю, вясел'ле, ноччу, наваколье, Беларусю, памяцюю."
        android:layout_below="@+id/textView77"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверь себя"
        android:id="@+id/button26"
        android:layout_below="@+id/editText45"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Слоў с падоўжанымі зычнымі - "
        android:id="@+id/textView78"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText45"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView78" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="10 - вакзал / 13 - пошта / 15 - бібліятэка"
        android:id="@+id/textView79"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/button26"
        android:layout_centerHorizontal="true" />


</RelativeLayout>