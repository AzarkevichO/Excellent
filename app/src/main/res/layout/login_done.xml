<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAntiqueWhite">
    <LinearLayout  android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout21"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/imageView9"
          android:background="@drawable/leopold"
          android:scaleType="center"
            android:layout_alignTop="@+id/linearLayout21"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:background="@drawable/pyzir"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="NTrcn"
        android:id="@+id/tv"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="10dp"
        android:layout_alignEnd="@+id/imageView10" />


</RelativeLayout>