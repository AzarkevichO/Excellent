<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Реши примеры,чтобы разгадать шифр."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="9"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3 * 4 = "
            android:id="@+id/textView17"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4 * 9 = "
            android:id="@+id/textView19"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText10"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 + 5 + 5 + 5 = "
            android:id="@+id/textView21"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="18 : 9 = "
            android:id="@+id/textView23"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText11"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="16 * 2 = "
            android:id="@+id/textView25"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <Button
            android:layout_width="27dp"
            android:layout_height="35dp"
            android:text="New Button"
            android:id="@+id/button25"
            android:layout_row="2"
            android:layout_column="3"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1мин - 30с  = "
            android:id="@+id/textView27"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:ems="10"
            android:id="@+id/editText12"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="39 : 3 = "
            android:id="@+id/textView29"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1дм + 5см = "
            android:id="@+id/textView31"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:ems="10"
            android:id="@+id/editText13"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3см + 1мм = "
            android:id="@+id/textView33"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:ems="10"
            android:id="@+id/editText5"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="50с + 40с = "
            android:id="@+id/textView35"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:ems="10"
            android:id="@+id/editText14"
            android:layout_row="4"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="44 : 4 = "
            android:id="@+id/textView37"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText6"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="32 : 8 = "
            android:id="@+id/textView39"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText15"
            android:layout_row="5"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="56 + 15 = "
            android:id="@+id/textView41"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="71 - 29 = "
            android:id="@+id/textView43"
            android:layout_row="6"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText16"
            android:layout_row="6"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="6 * 4 = "
            android:id="@+id/textView45"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="9 * 2 = "
            android:id="@+id/textView47"
            android:layout_row="7"
            android:layout_column="4"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText17"
            android:layout_row="7"
            android:layout_column="5"
            android:layout_gravity="top|center_horizontal" />



    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Узнать шифр"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---- -------! ------ -- ------ ---- ------."
        android:id="@+id/textView1"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Узнать дальше"
        android:id="@+id/button2"
        android:layout_below="@+id/textView1"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:clickable="false" />

</RelativeLayout>
