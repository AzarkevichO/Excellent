<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAntiqueWhite">
    <LinearLayout  android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout21"
        android:layout_marginTop="139dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:background="@drawable/leopold"
            android:scaleType="center"
            android:layout_alignTop="@+id/linearLayout21"
            android:layout_alignParentStart="true" />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:background="@drawable/pyzir"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button_main" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text=" Привет друг! Меня зовут Леопольд. Я буду путешествовать вместе с тобой. Для начало,давай познакомимся."
        android:id="@+id/textView90"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginTop="37dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_main"
        android:id="@+id/button_main"

        android:textSize="16dp"
        android:textStyle="italic"
        android:background="@color/colorAntiqueWhite"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
