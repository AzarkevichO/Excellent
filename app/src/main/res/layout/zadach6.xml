<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Найди предложение, в котором главные члены подчёркнуты правильно."
        android:id="@+id/textView80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_marginTop="50dp"
        android:background="@drawable/zadach6"
        android:layout_below="@+id/textView80"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гена ждет вас в зале под номером"
        android:id="@+id/textView81"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText46"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView81" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Провеь себя"
        android:id="@+id/button27"
        android:layout_below="@+id/editText46"
        android:layout_toStartOf="@+id/editText46"
        android:layout_marginTop="40dp" />
</RelativeLayout>