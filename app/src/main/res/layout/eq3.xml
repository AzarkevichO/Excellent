<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text="Бегип о дорожке,чтобы скрыться от преследования. Выполняй вычисления только с величинами, обозначающими длину."
        android:id="@+id/textView66"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
android:background="@drawable/eq3"
        android:layout_below="@+id/textView66"
        android:layout_alignParentStart="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверь себя"
        android:id="@+id/button22"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="86dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="дм"
        android:id="@+id/textView83"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignStart="@+id/button22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="см"
        android:id="@+id/textView84"
        android:layout_alignTop="@+id/textView83"
        android:layout_toEndOf="@+id/textView83"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="мм"
        android:id="@+id/textView85"
        android:layout_alignBottom="@+id/editText47"
        android:layout_toEndOf="@+id/editText47" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText39"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView83"
        android:layout_toEndOf="@+id/textView83" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText38"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView83"
        android:layout_toStartOf="@+id/textView83" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText47"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView84"
        android:layout_toEndOf="@+id/textView84" />

</RelativeLayout>