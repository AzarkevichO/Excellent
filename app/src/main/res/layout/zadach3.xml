<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Раздели фрукт так,чтобы хватило на всех."
        android:id="@+id/textView67" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_gravity="right"
        android:background="@drawable/orange"
        android:layout_below="@+id/textView67" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Всего в апельсине 12 сочных долек. Сколько долек получит каждый, если разделить апельсин на троих?"
        android:id="@+id/textView68"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Каждый получит по "
        android:id="@+id/textView69"
        android:layout_below="@+id/textView68"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText41"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView69"
        android:layout_toEndOf="@+id/textView69" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="дольки(долек),что равно"
        android:id="@+id/textView70"
        android:layout_alignTop="@+id/textView69"
        android:layout_toEndOf="@+id/editText41" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText42"
        android:layout_alignBottom="@+id/textView70"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_toEndOf="@+id/textView70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="части апельсина."
        android:id="@+id/textView71"
        android:layout_below="@+id/textView69"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверь себя"
        android:id="@+id/button23"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView71"
        android:layout_marginBottom="36dp" />
</RelativeLayout>