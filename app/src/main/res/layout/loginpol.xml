<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAntiqueWhite">
    <LinearLayout  android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout21"
        android:layout_below="@+id/imageView11"
        android:layout_alignParentStart="true">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="7dp"
            android:text="*Коснись меня для продолжения"
            android:id="@+id/textView88"
            android:layout_marginTop="11dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:background="@drawable/leopold"
            android:scaleType="center"
            android:layout_alignTop="@+id/linearLayout21"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <ImageView
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:id="@+id/imageView11"
        android:background="@drawable/boy"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:id="@+id/imageView14"
        android:background="@drawable/girl"
        android:layout_above="@+id/linearLayout21"
        android:layout_toStartOf="@+id/imageView10" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:background="@drawable/pyzir"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/radioGroup" />

    <RadioGroup android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAntiqueWhite"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мальчик"
            android:id="@+id/radioButton"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/radioGroup" />

        <RadioButton
            android:layout_width="98dp"
            android:layout_height="24dp"
            android:text="Девочка"
            android:id="@+id/radioButton2"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageView10" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="даша! Да это же одно из моих любимых имен! Я конечно не глупый кот, но все же скажи: ты мальчик? или девочка?"
        android:id="@+id/textView90"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_above="@+id/linearLayout21" />


</RelativeLayout>